{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/**/*.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1.ts"
        },
        {
            "src": "^/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "^/favicon.svg",
            "dest": "/favicon.svg"
        },
        {
            "src": "^/og-image.jpg",
            "dest": "/og-image.jpg"
        },
        {
            "src": ".*",
            "dest": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/check-subscription-status",
            "schedule": "0 0 * * *"
        }
    ]
}